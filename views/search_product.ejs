<!DOCTYPE html>
<html lang="en">
    <head>
    <%- include('./partials/head'); %>
    </head>
    <%- include('./partials/nav'); %>
    <div id='title' class="container" style="margin-top: 3em;">
        <div class="row justify-content-center">
          <h1 class="display-4">Search result for: <%= Search %><h1>
        </div>
    </div>
    <div class="container" style="justify-content: center; margin-top: 3em;">
        <table class="table table-bordered table-dark">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Poster</th>
                <th scope="col">Movie Name</th>
                <th scope="col">Released</th>
                <th scope="col">Price</th>
              </tr>
            </thead>
            <tbody style="font-size: x-large;">
                <% for(var i = 0; i < Movie.length; i++) { %>
                <tr>
                    <th scope="row"> <%= i + 1 %></th>
                    <td> <img src="<%= Movie[i].poster %>" /></td>
                    <td style="font-style: italic; font-weight: bold;">
                      <a href='get_movie?<%= Movie[i]._id %>' style="color: currentColor">
                        <%= Movie[i].name %>
                      </a>
                      <br><br>
                        <div style="font-style: normal; font-weight: lighter;">
                            <%- Movie[i].summary %>
                        </div>
                    </td>
                    <td><%= Movie[i].release %></td>
                    <td>$<%= (Movie[i].price / 100).toFixed(2) %></td>
                </tr>
                <% } %>
            </tbody>
          </table>
    </div>
</html>
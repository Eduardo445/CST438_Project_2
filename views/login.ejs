<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
        <!-- <link rel='stylesheet' type='text/css' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'>
        <link rel='stylesheet' type='text/css' href='/css/styles.css'> -->
    
    </head>
    <%- include('./partials/nav'); %>
    <body class="register_body"></body>
        <div class='container center'>
                <h1 class="monospace"> Login Page </h1> <br><br>
            
                <form class= "elegant-lightback container" action="/login" method='POST'>
                    <div class='form-group row'></div>

                    <div class='form-group row'>
                        <label for='username' class='col-sm-4 col-form-label'>Username:</label>
                        <div class='col-sm-4'>
                            <input type='text' class='form-control' id='username' name="username" required>
                        </div>
                    </div>

                    <div class='form-group row'></div>

                    <div class='form-group row'>
                        <label for='password' class='col-sm-4 col-form-label'>Password:</label>
                        <div class='col-sm-4'>
                            <input type='password' class='form-control' id='password' name="password" required>
                            <% if(Valid != undefined && !Valid) { %>
                                <p style="color:red;font-size:1.5em;"> Login Failed </p>				
                        <% } %>
                        </div>
                    </div>

                    <div class='form-group row'></div>

                    <div class='form-group row'>
                        <div class='col-sm-4'></div>
                        <div class='col-sm-4'>
                            <button class='cool btn btn-primary btn-block'>login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </body>
    <%- include('./partials/footer'); %>
</html>
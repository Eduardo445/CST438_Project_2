<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
        <script>
            $(document).ready(function(){
                $("#loginBtn").on("click", function() {
                    $.ajax({
                        method: "post",
                        url: "/check",
                        dataType: "json",
                        data: { "username": $("#username").val(),
                                "password": $("#password").val() },
                        success: function(result, status) {
                            if (!result) {
                                alert("Wrong credentials!");
                            } else {
                                location.href = "/";
                            }
                        }
                    }); // ajax
                }); // click
            }); // document.ready
        </script>
    
    </head>
    <%- include('./partials/nav'); %>
    <body class="register_body gradient"></body>
        <div class='container center'>
            <br><br><h1 class="jumbo"> Login</h1> <br><br>
            <div class='form-group row'></div>

            <div class='form-group row'>
                <div class='col-sm-4'></div>
                <div class='col-sm-4'>
                    <input type='text' placeholder="Username"class='field' id='username' required>
                </div>
            </div>

            <div class='form-group row'></div>

            <div class='form-group row'>
                <div class='col-sm-4'></div>
                <div class='col-sm-4'>
                    <input type='password' placeholder="Password"class='field' id='password' required>
                </div>
            </div>

            <div class='form-group row'></div>
            <div class='form-group row'></div>

            <div class='form-group row'>
                <div class='col-sm-4'></div>
                <div class='col-sm-4'>
                    <button class='button' id="loginBtn">Log In</button>
                </div>
            </div>
        </div>
    </body>
    <%- include('./partials/footer'); %>
</html>